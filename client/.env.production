# Production environment configuration
NODE_ENV=production

# API Configuration
# Set to empty to use Firebase directly
VITE_API_BASE_URL=

# Enable Firebase in production
VITE_USE_FIREBASE=true

# Disable mock data in production
VITE_USE_MOCK_DATA=false

# Disable Firebase emulators in production
VITE_USE_FIREBASE_EMULATORS=false

# Firebase configuration is injected at build time from Netlify environment variables
# VITE_FIREBASE_API_KEY
# VITE_FIREBASE_AUTH_DOMAIN
# VITE_FIREBASE_PROJECT_ID
# VITE_FIREBASE_STORAGE_BUCKET
# VITE_FIREBASE_MESSAGING_SENDER_ID
# VITE_FIREBASE_APP_ID
# VITE_FIREBASE_MEASUREMENT_ID