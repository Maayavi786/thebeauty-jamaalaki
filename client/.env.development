# Remove API base URL to use Firebase directly
VITE_API_BASE_URL=

# Enable Firebase debugging
VITE_FIREBASE_DEBUG=true

# This flag forces the app to use Firebase instead of the Express API
VITE_USE_FIREBASE=true

# Use mock data for local testing (no real Firebase connection needed)
VITE_USE_MOCK_DATA=true

# Use Firebase emulators when available (set to false when using mock data)
VITE_USE_FIREBASE_EMULATORS=false