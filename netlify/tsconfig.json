{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["functions/**/*.ts", "functions/server.ts"],
  "exclude": ["node_modules"]
}
